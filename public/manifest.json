{
  "manifest_version": 3,
  "name": "CleanClip",
  "version": "0.0.1",
  "description": "Screenshot/Image → OCR → Smart Paste",
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "commands": {
    "cleanclip-screenshot": {
      "description": "Area screenshot for OCR",
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      }
    }
  }
}
